{% extends 'PiwiS2pEventBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ event.title }}{% endblock %}

{% block headline %}{{ event.title }}{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-sm-12">
                        <img src="{{ asset('uploads/events/posters/' ~ event.poster)|imagine_filter('poster_m') }}" alt="{{ event.title }}">
                    </div>
                    <div class="col-sm-12 event-attendees">
                        <h3>{{ 'piwi.s2p.event.event.index.attendees'|trans }}</h3>
                        <ul class="list-inline">
                            {% if event.attendees is not empty %}
                                {% for attendee in event.attendees %}
                                    <li>
                                        <img src="{{ asset('uploads/profile_pictures/' ~ attendee.user.username ~ '.jpg')|imagine_filter('profile_picture_s') }}" alt="{{ attendee.user }}" class="img-responsive img-circle">
                                    </li>
                                {% endfor %}
                            {% else %}
                                <li>
                                    {{ 'piwi.s2p.event.event.index.no_attendees'|trans }}
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                    <div class="col-sm-12">
                        <ul class="list-unstyled">
                            {% if event.user == app.user %}
                                <li>
                                    <a href="{{ path('piwi_s2p_event_event_edit', {'slug': event.slug}) }}">
                                        {{ 'piwi.s2p.event.event.index.edit'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                            {% if app.user and attendee not in event.attendees %}
                                <li>
                                    <a href="{{ path('piwi_s2p_event_event_attend', {'slug': event.slug}) }}">
                                        {{ 'piwi.s2p.event.event.index.attend'|trans }}
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9 event-details">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <p class="resume">
                                {{ 'piwi.s2p.event.event.index.resume'|trans(
                                    {
                                        '%date%': event.date|date("d F"),
                                        '%venue%': event.venue
                                    }
                                ) }}
                                {% if event.source %}
                                    <br />{{ 'piwi.s2p.event.event.index.source'|trans }}: <a href="{{ event.source }}" target="_blank">{{ event.source }}</a>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <p>{{ event.description|markdown }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
